  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
    integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    let shadow = document.querySelectorAll("div .logreg a");
    const initialShadow = "0px 0px 0px 0px rgba(255,255,255,0)";
    const finalShadow = "20px 10px 20px 1px rgba(255,255,255,0.02), -20px -10px 20px 1px rgba(255,255,255,0.02), -20px 10px 20px 1px rgba(255,255,255,0.02), 20px -10px 20px 1px rgba(255,255,255,0.02)";
    shadow.forEach(elm => {
      elm.addEventListener("mouseenter", () => {
        gsap.to(elm, {
          scale: 1.05,
          duration: .3,
          boxShadow: finalShadow
        });
      });
      elm.addEventListener("mouseleave", () => {
        gsap.to(elm, {
          scale: 1,
          duration: .3,
          boxShadow: initialShadow
        });
      });
    })
  </script>


